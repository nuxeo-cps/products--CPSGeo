<metal:block define-macro="action_add">
  <input type="button" class="context" onClick="history.back()"
	 value="button_back" i18n:attributes="value" />
  <input type="button" class="context" onClick="javascript:addMap();" 
	 value="action_add_map" i18n:attributes="value"/>
</metal:block>
<metal:block define-macro="action_edit">
  <input type="button" class="context" onClick="javascript:editMap();" 
	 value="action_edit_map" i18n:attributes="value"/>
</metal:block>
